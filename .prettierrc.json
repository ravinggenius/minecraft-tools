{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": ["^@/(.*)$", "^../", "^./"],
  "importOrderCaseInsensitive": true,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "quoteProps": "consistent",
  "semi": true,
  "tabWidth": 4,
  "useTabs": true,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.json", "*.md", "*.mdx", "*.toml", "*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    }
  ]
}
